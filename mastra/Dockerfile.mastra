FROM node:20-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    python3 \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Clone the Mastra repository
RUN git clone https://github.com/mastra-ai/mastra.git .

# Install dependencies
RUN npm install -g pnpm
RUN pnpm install

# Build the application
RUN pnpm build

# Expose the port
EXPOSE 3000

# Start the application
CMD ["pnpm", "start"]
