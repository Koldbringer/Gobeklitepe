# Database Configuration
DB_HOST=localhost
DB_NAME=hvac_crm_erp
DB_USER=hvac_admin
DB_PASSWORD=your_secure_password
DB_PORT=5432

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_key

# Qdrant Configuration
QDRANT_CLUSTER_ID=your_qdrant_cluster_id
QDRANT_ENDPOINT=https://your-cluster-id.region.aws.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_HTTPS=true

# n8n Configuration
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key

# ElevenLabs API (for voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# Email Configuration
EMAIL_HOST=smtp.home.pl  # SMTP server for home.pl
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_HOST_USER=your_email@your_domain.pl
EMAIL_HOST_PASSWORD=your_password

# Email Retrieval Configuration
EMAIL_RETRIEVAL_METHOD=IMAP  # IMAP or POP3

# IMAP Configuration
EMAIL_IMAP_SERVER=imap.home.pl
EMAIL_IMAP_PORT=993
EMAIL_IMAP_USE_SSL=true

# POP3 Configuration
EMAIL_POP3_SERVER=pop3.home.pl
EMAIL_POP3_PORT=995
EMAIL_POP3_USE_SSL=true

# Note: For home.pl, use your regular email credentials

# Feature Flags
ENABLE_OCR=true
ENABLE_LLM=true
ENABLE_QDRANT=true
ENABLE_N8N=true
ENABLE_EMAIL=true
ENABLE_VOICE=true

# Quantum Communication Settings
QUANTUM_RETRY_ATTEMPTS=3
QUANTUM_CHANNEL_STABILITY=0.98

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_for_session_encryption
